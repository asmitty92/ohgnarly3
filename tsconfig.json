{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES5",
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist/",
    "skipLibCheck": true
  },
  "include": ["./**/*"],
  "exclude": ["**/node_modules/*", "**/__tests__/*"]
}